@model Slider
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1>Slider Create</h1>
        </div>
        <div class="col-md-8">
            <form method="post" asp-action="create" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="@Model.Title1">First title</label>
                    <input asp-for="@Model.Title1" class="form-control" placeholder="First title">
                    <span class="text-danger" asp-validation-for="Title1"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Title2">Second title</label>
                    <input asp-for="@Model.Title2" class="form-control" placeholder="Second title">
                    <span class="text-danger" asp-validation-for="Title2"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Desc">Description</label>
                    <textarea asp-for="@Model.Desc" class="form-control" placeholder="Description"></textarea>
                    <span class="text-danger" asp-validation-for="Desc"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.BtnUrl">Button Url</label>
                    <input asp-for="@Model.BtnUrl" class="form-control" placeholder="Button Url">
                    <span class="text-danger" asp-validation-for="BtnUrl"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.BtnText">Button Text</label>
                    <input asp-for="@Model.BtnText" class="form-control" placeholder="Button Text">
                    <span class="text-danger" asp-validation-for="BtnText"></span>
                </div>
                <div class="form-group">
                    <label for="btnUrlInput">Order</label>
                    <input asp-for="Order" class="form-control" id="Order" placeholder=" ">
                    <span class="text-danger" asp-validation-for="Order"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageFile">ImageFile</label>
                    <input asp-for="ImageFile" class="form-control" onchange="previewImage(this)">
                    <img width="250" id="previewImg" />
                    <span class="text-danger" asp-validation-for="ImageFile"></span>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>

    </div>
</div> 

@section scripts {
    @Html.Partial("_ValidationScriptsPartial");
}